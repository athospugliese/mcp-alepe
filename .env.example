# Configurações da API da ALEPE
# Copie este arquivo para .env e ajuste conforme necessário

# URL base da API da ALEPE
ALEPE_BASE_URL=https://dadosabertos.alepe.pe.gov.br/api/v1

# Configurações de timeout e retry
ALEPE_TIMEOUT=30.0
ALEPE_MAX_RETRIES=3
ALEPE_RETRY_DELAY=1.0

# Rate limiting (requisições por minuto)
ALEPE_RATE_LIMIT_REQUESTS=60

# User Agent para identificação
ALEPE_USER_AGENT=MCP-ALEPE/0.1.0 (Data Access Tool)

# Nível de log (DEBUG, INFO, WARNING, ERROR)
ALEPE_LOG_LEVEL=INFO

# Formatos suportados (não modificar)
# ALEPE_SUPPORTED_FORMATS=["json", "csv"]